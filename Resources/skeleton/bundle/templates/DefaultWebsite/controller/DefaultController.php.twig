    {
        //@todo Check for valid user session

        if (!$request->isXmlHttpRequest())
        {
            die('No valid request');
        }

        $id = $request->request->get('id');
        $content = $request->request->get('content');

        $entity = new CmsContent();
        $entity->setToken($id);
        $entity->setContent($content);

