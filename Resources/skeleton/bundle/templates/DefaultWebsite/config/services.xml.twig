<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Aloha Editor Configuration -->
        <parameter key="Aloha" type="collection">
            <parameter key="plugins">common/ui,common/format,common/highlighteditables,common/list,common/horizontalruler,common/link,common/image</parameter>
            <parameter key="settings">
                plugins: {
                    format: {
                        config: [ 'b', 'i', 'sub', 'sup', 'p', 'h1', 'h2', 'h3', 'h4', 'h5', 'h6', 'pre', 'removeFormat' ],
                        editables: {
                            '.page-header': []
                        }
                    },
                    link: {
                        config : [ 'a' ],
                        editables : {
                            '.page-header' : []
                        }
                    }
                }
            </parameter>
        </parameter>
    </parameters>

    <services>
        <!-- Aloha Editor Extension -->
        <service id="alohaeditor_extension" class="{{ namespace }}\Twig\AlohaEditorExtension">
            <tag name="twig.extension" />
            <argument type="service" id="service_container" />
            <argument type="service" id="router"/>
            <argument type="service" id="doctrine"/>
        </service>
    </services>

