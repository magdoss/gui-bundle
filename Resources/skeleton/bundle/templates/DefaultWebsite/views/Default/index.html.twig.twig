{{ '{% extends "' }}{{ bundle }}{{ '::base.html.twig" %}' }}
{{ '{% block content %}' }}
    <!-- Slider Teaser -->
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            {{ '{% for image in sliderImages %}' }}
            <li data-target="#carousel-example-generic" data-slide-to="{{ '{{ loop.index0 }}' }}"{{ '{% if loop.first %}' }} class="active"{{ '{% endif %}' }}></li>
            {{ '{% endfor %}' }}
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            {{ '{% for image in sliderImages %}' }}
            <div class="item{{ '{% if loop.first %}' }} active{{ '{% endif %}' }}">
                <img src="{{ '{{ asset(\'bundles/' }}{{ bundle_basename|lower }}{{ '/images/slider/\') }}{{ image }}' }}" alt="Slider Image">
                <div class="carousel-caption"></div>
            </div>
            {{ '{% endfor %}' }}
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
    <div class="page-header">
        <h1>Welcome <small>to your home page</small></h1>
    </div>
    <p>Please place here your page content.</p>
{{ '{% endblock %}' }}
